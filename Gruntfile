module.exports = function(grunt) {
  grunt.initConfig({

    require: {
      compile: {

        options: {
          appDir: "src/",
          baseUrl: ".",
          dir: "lib/",
          optimize: 'uglify',
          mainConfigFile:'./src/main.js',
          modules:[
            {
              name:'Main'
            }
          ],
          logLevel: 0,
          findNestedDependencies: true,
          fileExclusionRegExp: /^\./,
          inlineText: true
        }
      }
    }
  });

  grunt.loadNpmTasks('grunt-contrib-requirejs');
};
